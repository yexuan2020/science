
page {
  background-color: #f7f7f7;
  padding-bottom: 100rpx;
}

/* 顶部选项卡 */

.header {
  display: flex;
  position: fixed;
  top: 0;
  width: 100%;
  height: 88rpx;
  color: #333;
  font-size: 28rpx;
  background: #fff;
  border-bottom: 1rpx solid #e4e4e4;
  z-index: 100;
  /* overflow: hidden; */
  white-space: nowrap;
}

.header .cs {
  display: inline-block;
  padding: 0 20rpx;
  text-align: center;
  height: 84rpx;
  line-height: 84rpx;
  box-sizing: border-box;
}

.header .cs text {
  display: block;
  height: 100%;
}

.header .cs.active text {
  color: #ff8200;
  border-bottom: 2px solid #ff8200;
}

/* 分类下拉导航 */

.navDrop {
  position: relative;
}

.navDrop .hidden {
  display: none;
}

.navDrop .navScroll {
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  white-space: nowrap;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 100rpx;
  border-bottom: 1px solid #eee;
  background-color: #fff;
}

.navDrop .navItem {
  display: inline-block;
  width: auto;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
}

.navDrop .navItem:last-child {
  margin-right: 20rpx;
}

.navDrop .isRuleShow {
  display: block;
}

.navDrop .isRuleHide {
  display: none;
}

.navDrop .navBg {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2;
  top: 100rpx;
  left: 0;
}

.navDrop .navCon {
  padding: 20rpx;
  background-color: #fff;
  white-space: normal;
}

.navDrop .navItem2 {
  display: inline-block;
  margin: 10rpx 20rpx 10rpx 10rpx;
  font-size: 28rpx;
  color: #666;
}

.navDrop .active,
.navDrop .navItem2 .active {
  color: #ff8200;
}

/*文档列表*/
.list-body {
  background: #ffffff;
}

.block-proList {
  margin-top: 108rpx;
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  padding: 30rpx;
}

.block-proList .pro-item {
  width: 330rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;

}

.block-proList .pro-item:nth-child(2n) {
  margin-right: 0;
}

.block-proList .pro-item image {
  width: 100%;
  height: 330rpx;
  border-radius: 10rpx;
  border: 1px solid #eee;
}

.block-proList .pro-item .title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  color: #333;
}

.block-proList .pro-item .price {
  font-size: 32rpx;
  color: #ff7600;
}