.container{
  background-color: #f4f4f4;
}

.header {
  width: 100%;
  height: 88rpx;
  border-bottom: 1rpx solid #e4e4e4;
  display: flex;
  background: #fff;
  line-height: 88rpx;
  position: fixed;
  top: 0;
  z-index: 100;
}

.header view {
  flex: 1;
  text-align: center;
  padding: 0 15rpx;
}

.header view text {
  display: block;
}

.header view.active {
  color: #ff7600;
}

.header view.active text {
  border-bottom: 1px solid #ff7600;
}

.order-box {
  padding: 0 15px;
}

.order-header {
  /* border-bottom: 1rpx solid #e4e4e4; */
  padding: 10rpx 0rpx 16rpx;
}

.order-header .time {
  /* margin-top: 16rpx; */
  font-size: 26rpx;
  color: #777;
}
.order-header .time .iconfont{
  font-size: 26rpx;
  margin-right: 10rpx;
}

.order-header .cont {
  /* display: block; */
  font-size: 30rpx;
  color: #ff7600;
}

.order-cont {
  padding: 15rpx 0;
  justify-content: space-between;
}

.order-cont .order-num text,
.order-cont .order-time text {
  color: #777;
  font-size: 26rpx;
}

.order-shop {
  padding: 16rpx 0 16rpx 0;
}

.order-shop-left,
.order-shop-left image {
  width: 150rpx;
  height: 110rpx;
  /* border: 1rpx solid #e4e4e4; */
  margin-right: 15rpx;
  display: inline-block;
  background: #fff;
}

.order-shop .num {
  float: right;
}

.order-btn {
  padding: 18rpx 0 18rpx 0;
}

.order-btn .order-left {
  flex: 3;
}

.order-btn .order-left text,
.order-btn .order-left .text {
  font-size: 29rpx;
}

.order-btn .order-left .text {
  color: #888;
}

.order-btn .order-right {
  flex: 3;
}

.order-btn .order-right .btn-group {
  justify-content: flex-end;
}

.order-list-box .left {
  /* flex: 4; */
  overflow: hidden;
  position: relative;
}

.order-list-box .right {
  flex: 1;
}

.goods-number {
  font-size: 28rpx;
  color: #777;
  /* height: 150rpx; */
  overflow: hidden;
  margin-right: 10rpx;
}

.btn-default {
  border-radius: 4px;
  border: 1rpx solid #ccc;
  padding: 6rpx 20rpx;
  font-size: 28rpx;
  color: #555;
  float: right;
}

.btn-main {
  border-radius: 4px;
  border: 1rpx solid #ff7600;
  padding: 6rpx 20rpx;
  font-size: 28rpx;
  color: #ff7600;
  margin-left: 10rpx;
  float: right;
}

.user-orderJtou {
  font-size: 24rpx;
}

.order-img_list {
  background: #fff;
  border-top: 1rpx solid #f1f1f1;
  border-bottom: 1rpx solid #f1f1f1;
}

.order-right-name {
  position: absolute;
  top: 50%;
  left: 180rpx;
  font-size: 30rpx;
  color: #555;
  width: 100%;
  margin-top: -46rpx;
  line-height: 1.6;
}
